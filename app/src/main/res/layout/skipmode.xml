<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/er"
    tools:context=".UserMode">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:background="@drawable/basement"
                android:gravity="center"
                android:textColor="#fff"
                android:text="Sylhet International University"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/skip_location"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:elevation="20dp"
            android:background="@drawable/menu_button"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/location" />

            <TextView
                android:gravity="center"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Location"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/skip_fb"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:elevation="20dp"
            android:background="@drawable/menu_button"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/fb" />

            <TextView
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Facebook Page"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/skip_about"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:elevation="20dp"
            android:background="@drawable/menu_button"
            android:orientation="vertical">

            <ImageView
                android:background="@drawable/siu"
                android:padding="2dp"
                android:layout_width="35dp"
                android:layout_height="45dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="About SIU"/>

        </LinearLayout>






    </LinearLayout>
</ScrollView>