<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/er"
    tools:context=".Profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#6BD1C5"
                app:cardElevation="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="My Profile"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#5fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/header_cell"
                        android:text="User name"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/profile_username"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:textColor="#41C6D5"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:background="@drawable/basic_cell_2"
                        android:gravity="center"/>


                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/header_cell"
                        android:text="Full Name"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/profile_fullname"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:textColor="#41C6D5"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:background="@drawable/basic_cell_2"
                        android:gravity="center"/>


                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/header_cell"
                        android:text="Registration"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/profile_regnumber"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:textColor="#41C6D5"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:background="@drawable/basic_cell_2"
                        android:gravity="center"/>


                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/header_cell"
                        android:text="Department"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/profile_department"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:textColor="#41C6D5"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:background="@drawable/basic_cell_2"
                        android:gravity="center"/>


                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/header_cell"
                        android:text="@string/email"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/profile_email"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:textColor="#41C6D5"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:background="@drawable/basic_cell_2"
                        android:gravity="center"/>


                </TableRow>

                <TableRow android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/header_cell"
                        android:text="@string/password"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/profile_password"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:textColor="#41C6D5"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:background="@drawable/basic_cell_2"
                        android:gravity="center"/>


                </TableRow>

            </TableLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>